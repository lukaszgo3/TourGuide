<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/TourGuideTabsStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TourGuideTabsStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">3dp</item>
    </style>


    <style name="fragmentTabs" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/TabTextApp</item>
        <item name="tabBackground">@color/colorPrimary</item>
    </style>
    
    <style name="TabTextApp" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
